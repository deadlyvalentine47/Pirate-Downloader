{
    "manifest_version": 3,
    "name": "Pirate Downloader Integration",
    "version": "1.0",
    "description": "Integrates Pirate Downloader with your browser",
    "permissions": [
        "nativeMessaging",
        "activeTab",
        "downloads",
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Pirate Downloader"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}